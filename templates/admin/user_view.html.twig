{% extends 'base.html.twig' %}

{% block title %}
    {{ item.login }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <h1>{{ item.login }}</h1>
            <a class="btn btn-outline-info" href="{{ url('admin_change_password', {'id': item.id}) }}">
                Zmień hasło
            </a>
        </div>
    </div>
    {% set customer = item.customer %}
    {% if customer %}
        <div class="row">
            <div class="col">
                <p>
                <strong>Nazwisko:</strong> {{ customer.name }} {{ customer.surname }}<br />
                <strong>Email:</strong> {{ customer.email }}<br />
                </p>
                <div class="btn-group">
                    <a class="btn btn-outline-info" href="{{ url('admin_customer_edit', {'id': item.customer.id}) }}">Zmień</a>
                </div>
            </div>
        </div>
        {% if customer.address %}
            {% set address = customer.address.address %}
            {% if address %}
                <div class="row">
                    <div class="col">
                        <p>
                        <strong>Ulica:</strong> {{ address.street }} {{ address.number }}<br />
                        {{ address.city }}, {{ address.postalcode }}<br />
                        </p>
                        <div class="btn-group">
                            <a class="btn btn-outline-info" href="{{ url('admin_address_edit', {'id': customer.address.id}) }}">Zmień</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    {% endif %}
    {% if not ( item.id == app.user.id ) and not ( customer and customer.orders ) %}
        <div class="row">
            <div class="col">
                <div class="btn-group">
                    <a class="btn btn-outline-danger" href="{{ url('admin_user_delete', {'id': item.id}) }}">Usuń użytkownika</a>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
