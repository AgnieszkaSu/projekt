{% if app.session.flashBag.peekAll is defined and app.session.flashBag.peekAll is not empty %}
<div class="container">
    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }}" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</div>
{% endif %}