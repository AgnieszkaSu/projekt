<div class="col-12 col-md-6 col-lg-4">
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">
                <span class="text-muted">Status:</span> {{ order.status }}
            </h5>
            <h6 class="card-subtitle text-muted">
                <span class="text-muted">Zamówiono:</span> {{ order.ordereddate|date('Y-m-d H:i:s') }}
            </h6>
            {% if order.shippeddate|default(false) %}
            <h6 class="card-subtitle">
                <span class="text-muted">Wysłano:</span> {{ order.shippeddate|date('Y-m-d H:i:s') }}
            </h6>
            {% endif %}
        </div>
        <ul class="list-group list-group-flush">
            {% for item in order.orderproducts %}
                <li class="list-group-item">
                    {% if not is_admin|default(false) %}
                    <a href="{{ url('type_view', {'id': item.product.type.id}) }}"
                        class="card-link stretched-link text-body" >
                    {% endif %}
                    {{ item.quantity }}x {{ (item.price/100)|number_format(2,'.','') }}<br />
                    {{ item.product.type.name }} - {{ item.product.colour.name }}
                    {% if not is_admin|default(false) %}
                    </a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
        {% if is_admin|default(false) %}
        <div class="card-body">
            <div class="btn-group">
                <a class="btn btn-outline-info" href="{{ url('admin_order_edit', {'id': order.id}) }}">Edytuj</a>
            </div>
        </div>
        {% endif %}
    </div>
</div>
