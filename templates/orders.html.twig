{% extends 'base.html.twig' %}

{% block title %}
    {{ 'label.myorders'|trans }}
{% endblock %}

{% block body %}
    {% if pagination is defined and pagination|length %}
    <div class="row">
        <div class="col">
            <h1>{{ 'label.myorders'|trans }}</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col col-auto navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
    <div class="row">
        {% for item in pagination %}
            {% include 'default/_order.html.twig' with {
                order: item
            } %}
        {% endfor %}
    </div>
    <div class="row justify-content-center">
        <div class="col col-auto navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
    {% else %}
        <div class="row">
            <div class="col">
                <h1>{{ 'label.noorders'|trans }}</h1>
            </div>
        </div>
    {% endif %}
{% endblock %}
