{% extends 'base.html.twig' %}

{% block title %}
    {{ 'label.login'|trans }}
{% endblock %}

{% block body %}
    <h1>
        {{ 'label.login'|trans }}
    </h1>

    <form method="post" action="{{ url('security_login') }}">
        {% if error %}
            {%  include 'default/_single_flash_message.html.twig' with {
            type: 'danger',
            message: error.messageKey|default('error.login')|trans
            } %}
        {% endif %}

        <div class="form-group row">
            <label class="col-form-label col-sm-2 required" for="login">{{ 'label.yourlogin'|trans }}:</label>
            <div class="col-sm-10">
                <input type="text" id="login" name="login" value="{{ last_username }}" class="form-control" required="required" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2 required" for="password">{{ 'label.password'|trans }}:</label>
            <div class="col-sm-10">
                <input type="password" id="password" name="password" class="form-control" required="required" />
            </div>
        </div>

        <div class="form-group row float-sm-right">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
    </form>
{% endblock %}
